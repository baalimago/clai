{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ChatGPT - Query",
      "type": "go",
      "request": "launch",
      "program": "${workspaceFolder}",
      "args": [
        "-cm",
        "gpt-4-turbo-preview",
        "query",
        "I'm debugging my cli ai too. Write a short consice response."
      ],
      "env": {
        "NO_COLOR": "true"
      }
    },
    {
      "name": "Claude - Query",
      "type": "go",
      "request": "launch",
      "program": "${workspaceFolder}",
      "args": [
        "query",
        "test"
      ],
      "env": {
        "NO_COLOR": "true"
      }
    },
    {
      "name": "Claude - Chat",
      "type": "go",
      "request": "launch",
      "program": "${workspaceFolder}",
      "args": [
        "chat",
        "new",
        "im debugging my ai cli tool's conversation functionality, reply with something short"
      ],
      "env": {
        "NO_COLOR": "true"
      }
    }
  ]
}
